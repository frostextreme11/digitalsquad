{
    "rewrites": [
        {
            "source": "/sitemap.xml",
            "destination": "/api/sitemap.xml"
        },
        {
            "source": "/blog/:slug*",
            "has": [
                {
                    "type": "header",
                    "key": "user-agent",
                    "value": "(?i).*(googlebot|bingbot|baiduspider|yandex|facebookexternalhit|twitterbot|linkedinbot|whatsapp|telegrambot|applebot|duckduckbot|slackbot|pinterest).*"
                }
            ],
            "destination": "/api/prerender?path=/blog/:slug*"
        },
        {
            "source": "/blog",
            "has": [
                {
                    "type": "header",
                    "key": "user-agent",
                    "value": "(?i).*(googlebot|bingbot|baiduspider|yandex|facebookexternalhit|twitterbot|linkedinbot|whatsapp|telegrambot|applebot|duckduckbot|slackbot|pinterest).*"
                }
            ],
            "destination": "/api/prerender?path=/blog"
        },
        {
            "source": "/((?!api/).*)",
            "destination": "/index.html"
        }
    ],
    "headers": [
        {
            "source": "/sitemap.xml",
            "headers": [
                {
                    "key": "Content-Type",
                    "value": "application/xml"
                },
                {
                    "key": "Cache-Control",
                    "value": "s-maxage=3600, stale-while-revalidate=600"
                }
            ]
        },
        {
            "source": "/robots.txt",
            "headers": [
                {
                    "key": "Content-Type",
                    "value": "text/plain"
                },
                {
                    "key": "Cache-Control",
                    "value": "s-maxage=86400"
                }
            ]
        },
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                }
            ]
        }
    ]
}